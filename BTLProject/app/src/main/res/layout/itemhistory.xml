<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_background"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="16dp"
    android:padding="8dp">
    <!-- Mã đơn hàng -->
    <TextView
        android:id="@+id/orderCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5FRD4R33"
        android:textColor="#003399"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Hành trình đơn hàng -->
    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hành trình đơn hàng"
        android:textColor="#FF9800"
        android:textSize="12sp"
        android:background="@drawable/status_background"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Chờ lấy hàng -->
    <TextView
        android:id="@+id/pickupStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chờ lấy hàng"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/orderCode"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="4dp" />

    <!-- Tên khách hàng và số điện thoại -->
    <TextView
        android:id="@+id/customerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đinh Thị Tuyết - 0966888888"
        android:textSize="13sp"
        app:layout_constraintTop_toBottomOf="@id/pickupStatus"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="4dp" />

    <!-- Địa chỉ -->
    <TextView
        android:id="@+id/customerAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Bệnh viện y dược cổ truyền Ninh Thuận..."
        android:textSize="13sp"
        android:paddingTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/customerInfo"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Tiền thu hộ -->
    <TextView
        android:id="@+id/codAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 vnđ"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/customerAddress"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>